{
  "manifest_version": 3,
  "name": "AutoScreenshot",
  "version": "1.0",
  "description": "Take screenshots at regular intervals and save them to a specified location.",
  "permissions": ["activeTab", "storage", "downloads", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
